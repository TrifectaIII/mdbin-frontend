{
    "name": "mdbin-frontend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "run-p watch format:watch",
        "watch:": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
        "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
        "format": "prettier -w .",
        "format:watch": "onchange \"**/*\" -- prettier -w -u {{changed}}"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "dependencies": {
        "@codemirror/history": "^0.19.2",
        "@codemirror/lang-markdown": "^0.19.3",
        "@codemirror/language-data": "^0.19.1",
        "@material-ui/core": "^4.11.4",
        "@material-ui/icons": "^4.11.2",
        "@reduxjs/toolkit": "^1.5.1",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "@types/jest": "^24.9.1",
        "@types/material-ui": "^0.21.8",
        "@types/node": "^12.20.11",
        "@types/react": "^16.14.5",
        "@types/react-dom": "^16.9.12",
        "@types/react-google-recaptcha": "^2.1.2",
        "@types/react-redux": "^7.1.16",
        "@types/react-router-dom": "^5.1.7",
        "@types/validator": "^13.7.1",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "@uiw/react-codemirror": "^4.3.1",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-react": "^7.23.2",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.1.0",
        "prettier": "2.6.2",
        "prettier-plugin-organize-imports": "^2.3.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-google-recaptcha": "^2.1.0",
        "react-markdown": "^8.0.0",
        "react-redux": "^7.2.4",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^5.0.0",
        "remark-gfm": "^3.0.1",
        "typescript": "^4.2.4",
        "validator": "^13.7.0"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
